<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<!--map java class with table in database-->

<hibernate-mapping>

    <class name="model.Ticket" table="Ticket">
        <id name="ticketID" column="ticketID" type="string"></id>
        <property name="flightNumber" column="flightNUmber" type="string"></property>
        <property name="flightDate" column="flightDate" type="string"></property>
        <property name="travellerID" column="travellerID" type="string"></property>
        <property name="transactionID" column="transactionID" type="string"></property>
    </class>

</hibernate-mapping>