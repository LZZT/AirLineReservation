<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<!--map java class with table in database-->

<hibernate-mapping>

    <class name="model.ValidateTicket" table="ValidateTicket">

        <id name="flightNumber" column="flightNumber" type="string"></id>
        <property name="flightDate" column="flightDate" type="string"></property>
        <property name="capacity" column="capacity" type="int"></property>
        <property name="totalTicketNumber" column="totalTicketNumber" type="int"></property>

    </class>

</hibernate-mapping>