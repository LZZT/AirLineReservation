<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">


<struts>

    <package name="action" extends="struts-default">

        <interceptors>

            <interceptor name="loginInterceptor" class="interceptor.LoginInterceptor"></interceptor>

            <!--<interceptor-stack name="AirLineReservationInterceptorStack">-->
                <!--<interceptor-ref name="loginInterceptor"></interceptor-ref>-->
                <!--<interceptor-ref name="defaultStack"></interceptor-ref>-->
            <!--</interceptor-stack>-->

        </interceptors>

        <!--<default-interceptor-ref name="AirLineReservationInterceptorStack"></default-interceptor-ref>-->

        <global-results>
            <result name="login">/login.jsp</result>
        </global-results>


        <action name="test" class="action.TestAction" method="saveAndGetTestUserBack">
            <result name="success">/testDelete.jsp</result>
        </action>

        <action name="deleteTestUser" class="action.TestAction" method="deleteTestUser">
            <result name="success">/testInsert.jsp</result>
        </action>

        <action name="login" class="action.LoginAction" method="login">
            <result name="success" type="redirect">/index.jsp</result>
            <result name="input">/login.jsp</result>
        </action>

        <action name="register" class="action.RegisterAction" method="register">
            <result name="success" type="redirect">/index.jsp</result>
            <result name="input">/register.jsp</result>
        </action>

        <action name="logout" class="action.LogoutAction" method="logout">
            <result name="success" type="redirect">/logout.jsp</result>
        </action>


        <action name="searchFlight" class="action.SearchAction" method="findInfo">
            <result name="success" type="redirect">/searchResult.jsp</result>
            <result name="input">/index.jsp</result>
        </action>

        <action name="filter" class="action.FilterAction">
            <result name="success" type="redirect">/searchResult.jsp</result>
        </action>


    </package>

</struts>