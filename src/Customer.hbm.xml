<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<!--map java class with table in database-->

<hibernate-mapping>

    <class name="model.Customer" table="Customer">

        <id name="username" column="username" type="string"></id>
        <property name="password" column="password" type="string"></property>
        <property name="contactEmail" column="contactEmail" type="string"></property>
        <property name="cBonus" column="cBonus" type="int"></property>

    </class>

</hibernate-mapping>