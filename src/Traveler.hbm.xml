<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<!--map java class with table in database-->

<hibernate-mapping>

    <class name="model.Traveler" table="Traveller">
        <id name="phone" column="contactPhone" type="string"></id>
        <property name="lastname" column="lastName" type="string"></property>
        <property name="firstname" column="firstName" type="string"></property>
        <property name="dob" column="dob" type="string"></property>
        <property name="email" column="contactEmail" type="string"></property>
        <property name="gender" column="gender" type="string"></property>

    </class>

</hibernate-mapping>